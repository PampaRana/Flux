<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".complaint.views.AddComplaintFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_dealer_det"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:elevation="10dp"
                    app:cardBackgroundColor="#fcfcfc"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="20dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/viewOne"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">
                                <!---Expense Id- -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/name"
                                        style="@style/beat_name"
                                        android:text="Raja Oil Ltd" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/type"
                                        style="@style/text_header_small"
                                        android:layout_width="wrap_content"
                                        android:text="Dealer" />


                                </LinearLayout>
                                <!-- -Expense Type -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:id="@+id/tv_prodNetPrice"
                                        style="@style/rv_caption"
                                        android:text="+919836256985" />

                                    <TextView
                                        android:id="@+id/tv_km"
                                        style="@style/rv_caption"
                                        android:textAlignment="viewEnd" />

                                </LinearLayout>

                                <!-- -Product Total Price -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:id="@+id/tv_prodTotalPrice"
                                        style="@style/rv_caption"
                                        android:text="Sumit Sen" />


                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_16dp"
                                    android:background="@drawable/border"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="@dimen/dimen_20dp">

                                    <TextView
                                        android:id="@+id/trgtTxt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:text="Target"
                                        android:textColor="@color/colorGreen"
                                        android:textSize="18dp"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:id="@+id/listTitle"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/trgtTxt"
                                        android:layout_marginTop="10dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_invoice"
                                            style="@style/rv_caption"
                                            android:text="Order"
                                            android:textAlignment="center"
                                            android:textColor="#307D7E"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tv_payment_date"
                                            style="@style/rv_caption"
                                            android:text="Collection"
                                            android:textAlignment="center"
                                            android:textColor="#307D7E"
                                            android:textStyle="bold" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/listTitle"
                                        android:layout_marginTop="5dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_ordrAmt"
                                            style="@style/rv_caption"
                                            android:text="₹ 20,000"
                                            android:textAlignment="center" />

                                        <TextView
                                            android:id="@+id/collectionAmt"
                                            style="@style/rv_caption"
                                            android:text="₹ 10,000"
                                            android:textAlignment="center" />


                                    </LinearLayout>

                                </RelativeLayout>


                            </LinearLayout>


                        </LinearLayout>

                        <TextView
                            android:id="@+id/gradeval"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:text="A"
                            android:textAlignment="center"
                            android:textColor="@color/colorGreen"
                            android:textSize="20dip"
                            android:textStyle="bold" />


                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>

                <!--<View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/colorOrange"
                    android:id="@+id/sampleLine"
                    android:layout_below="@+id/card_dealer_det"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    />-->


                <RelativeLayout
                    android:id="@+id/ll_spinner33"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_50"
                    android:layout_below="@+id/card_dealer_det"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:layout_marginRight="@dimen/padding_10"
                    android:background="@drawable/layout_bg_selector"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spinner33"
                        style="@style/SpinnerTheme"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:entries="@array/array_name2"
                        android:imeOptions="actionNext"
                        android:popupBackground="@drawable/spinner_background"
                        android:spinnerMode="dropdown" />

                    <TextView
                        android:id="@+id/tv_complain_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Complain Type"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/accent"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_pdt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Name"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/accent"
                        android:visibility="gone" />

                </RelativeLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_20dp"
                    android:layout_below="@+id/ll_spinner33" />

                <RelativeLayout
                    android:id="@+id/ll_spinner22"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_50"
                    android:layout_below="@+id/view1"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:layout_marginRight="@dimen/padding_10"
                    android:background="@drawable/layout_bg_selector"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spinner22"
                        style="@style/SpinnerTheme"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        android:entries="@array/array_name44"
                        android:imeOptions="actionNext"
                        android:popupBackground="@drawable/spinner_background"
                        android:spinnerMode="dropdown" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_spinner22"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:layout_marginRight="@dimen/padding_10"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_quantity"
                        style="@style/login_reg_input_label"
                        android:layout_marginTop="10dp"
                        android:hint="Quantity">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_quantity"
                            style="@style/login_reg_input_text"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_batch"
                        style="@style/login_reg_input_label"
                        android:layout_marginTop="10dp"
                        android:hint="Batch No.">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_batchno"
                            style="@style/login_reg_input_text"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_remarks"
                        style="@style/login_reg_input_label"
                        android:layout_marginTop="10dp"
                        android:hint="Remarks">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_remarks"
                            style="@style/login_reg_input_text"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_exp_bill"
                            android:layout_width="0dp"
                            android:scaleType="fitXY"
                            android:layout_height="150dp"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_capture_img"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/black"
                                android:drawableRight="@drawable/ic_photo_camera"
                                android:text="@string/capture_img"
                                android:textColor="@color/white" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_select_img"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/black"
                                android:drawableRight="@drawable/ic_gallery"
                                android:text="@string/select_img"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_saveComplain"
                        style="@style/styleAppCompactButton"
                        android:backgroundTint="@color/black"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:textStyle="bold" />


                </LinearLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>
</layout>