<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/header"
    tools:context=".order.views.OrderCheckOutFragment">

    <RelativeLayout
        android:padding="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/ll_spinnerType"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50"
            android:layout_margin="@dimen/padding_10"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:background="@drawable/layout_bg_selector"
            android:orientation="vertical">
            <Spinner
                style="@style/SpinnerTheme"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_centerVertical="true"
                android:id="@+id/spinnerType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/array_dealDist"
                android:imeOptions="actionNext"
                android:popupBackground="@drawable/spinner_background"
                android:spinnerMode="dropdown" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_area"
            android:layout_width="match_parent"
            android:layout_below="@+id/ll_spinnerType"
            android:layout_height="@dimen/padding_50"
            android:visibility="gone"
            android:layout_margin="@dimen/padding_10"
            android:background="@drawable/layout_bg_selector"
            android:orientation="vertical">

            <Spinner
                style="@style/SpinnerTheme"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_centerVertical="true"
                android:id="@+id/spinnerArea"
                android:entries="@array/filter_area"
                android:popupBackground="@drawable/spinner_background"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:spinnerMode="dropdown" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ll_spinnerDealDis"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_50"
            android:visibility="gone"
            android:layout_below="@+id/ll_area"
            android:layout_margin="@dimen/padding_10"
            android:background="@drawable/layout_bg_selector"
            android:orientation="vertical">

            <Spinner
                style="@style/SpinnerTheme"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_centerVertical="true"
                android:id="@+id/spinnerDealDis"
                android:popupBackground="@drawable/spinner_background"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:spinnerMode="dropdown" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_payment_type"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_below="@+id/ll_spinnerDealDis"
            android:background="@drawable/cell_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Spinner
                android:padding="@dimen/padding_10"
                android:visibility="gone"
                android:id="@+id/spinnerPaymentType"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:drawSelectorOnTop="true"
                android:drawableRight="@drawable/ic_expand"
                android:entries="@array/array_paymentType"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_credit"
            android:visibility="gone"
            android:layout_marginRight="@dimen/padding_8"
            android:layout_marginLeft="@dimen/padding_8"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_below="@+id/ll_payment_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_60"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_credit_day"
                android:layout_weight="1"
                android:background="@drawable/layout_bg_selector"
                android:padding="@dimen/padding_10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:typeface="sans"
                />
            <View
                android:layout_width="@dimen/padding_10"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_outstand_amt"
                android:layout_weight="1"
                android:background="@drawable/layout_bg_selector"
                android:padding="@dimen/padding_10"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:typeface="sans"
                />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="@dimen/dimen_30dp"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:layout_below="@+id/rl_credit"
            android:id="@+id/btn_place_order"
            android:layout_weight="1"
            android:visibility="gone"
            style="@style/styleButtonWithNoBottom"
            android:backgroundTint="@color/colorGreen"
            android:text="Place Order" />
    </RelativeLayout>
</RelativeLayout>

</layout>