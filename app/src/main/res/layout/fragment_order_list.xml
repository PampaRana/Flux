                android:visibility="visible">

                <Spinner
                    android:id="@+id/spinnerArea"
                    style="@style/SpinnerTheme"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:entries="@array/filter_area"
                    android:imeOptions="actionNext"
                    android:popupBackground="@drawable/spinner_background"
                    android:spinnerMode="dropdown" />
            </RelativeLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ly"
            android:layout_below="@+id/ll_spinnerDealDis"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:weightSum="150"
                android:orientation="horizontal"
                android:id="@+id/lay1">

                <Button
                    android:id="@+id/pendingButton"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="false"
                    android:layout_weight="48"
                    android:background="@drawable/complaint_spinner"
                    android:backgroundTint="@color/colorOrange"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Pending" />

                <View
                    android:layout_width="0dip"
                    android:layout_weight="4"
                    android:layout_height="50dp"/>

                <Button
                    android:id="@+id/completedButton"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="48"
                    android:backgroundTint="@color/colorGreen"
                    android:background="@drawable/complaint_spinner"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Completed"
                    />
                <View
                    android:layout_width="0dip"
                    android:layout_weight="4"
                    android:layout_height="50dp"/>

                <Button
                    android:id="@+id/allButton"
                    android:layout_width="0dip"
                    android:layout_height="50dp"
                    android:layout_weight="46"
                    android:backgroundTint="@color/cardview_dark_background"
                    android:background="@drawable/complaint_spinner"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="All"
                    />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_orderList"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </LinearLayout>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabFilter"
                style="@style/add_fab"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                app:backgroundTint="@color/primary"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_filter" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            style="@style/add_fab"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            app:backgroundTint="@color/primary"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_add_white" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="No data found"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18"
            android:typeface="sans"
            android:visibility="gone" />
    </RelativeLayout>
</layout>