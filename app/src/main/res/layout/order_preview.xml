<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pdt_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/padding_2"
    app:cardCornerRadius="@dimen/padding_5"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_prodImageUrl"
            android:padding="@dimen/padding_5"
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/content_description_media"
            app:srcCompat="@mipmap/ic_launcher" />
        <RelativeLayout
            android:layout_marginLeft="@dimen/padding_5"
            android:id="@+id/rl_item"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_prodImageUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_prodName"
                android:text="Name"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/black"
                android:fontFamily="@font/robotomedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_single_price"
                android:layout_below="@+id/tv_prodName"
                android:text="₹100"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/black"
                android:fontFamily="@font/robotomedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_below="@+id/tv_single_price"
                android:text="₹100"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/black"
                android:fontFamily="@font/robotomedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv_quantity"
                android:layout_below="@+id/tv_price"
                android:text="Quantity"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/black"
                android:fontFamily="@font/robotomedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_ltr"
                android:layout_below="@+id/tv_quantity"
                android:text="ltr"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/black"
                android:fontFamily="@font/robotomedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_pdt_type"
                android:layout_below="@+id/tv_ltr"
                android:text="Pdt Type"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"
                android:textColor="@color/black"
                android:fontFamily="@font/robotomedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_scheme_name"
                android:layout_below="@+id/tv_ltr"
                android:textSize="@dimen/text_size_14"
                android:visibility="visible"
                android:textColor="@color/black"
                android:fontFamily="@font/robotomedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>