<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="orderHeadInfo"
            type="com.velectico.rbm.beats.model.OrderListDetails" />
    </data>



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        style="@style/cv_style">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="2dip"
            android:id="@+id/beatDateRow"
            android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">


                <!-- -Order Dist Name Id -->
                <LinearLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_person_name"
                        style="@style/rv_caption"
                        />

                    <TextView
                        android:id="@+id/tv_prodCode"
                        android:text=""
                        style="@style/rv_caption" />

                </LinearLayout>
                <!-- Beat Id -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/rv_caption"
                        android:text="@string/order_date" />
<!--                        android:text="@{orderHeadInfo.orderDate}"
-->
                    <TextView
                        android:id="@+id/tv_prodNetPrice"
                        style="@style/rv_caption" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/rv_caption"
                        android:text="@string/mdtp_time" />
                    <!--                        android:text="@{orderHeadInfo.orderDate}"
                    -->
                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/rv_caption" />

                </LinearLayout>
                <!-- Beat Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/rv_caption"
                        android:text="@string/order_amount" />

                    <TextView
                        android:id="@+id/tv_prodTotalPrice"
                        android:text="@{'â‚¹' +orderHeadInfo.totalPrice}"
                        style="@style/rv_caption" />

                </LinearLayout>

                <!-- -Product Unit -->
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/rv_caption"
                        android:text="@string/order_created_by" />

                    <TextView
                        android:id="@+id/tv_unit"
                        android:text="Ajay"
                        style="@style/rv_caption" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_dist_button"
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_35dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="right"
                    android:layout_alignParentBottom="true">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_pending"
                        style="@style/styleButtonWithNoBottom"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_12"
                        android:visibility="gone"
                        android:backgroundTint="@color/color_btn"
                        android:text="Pending" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorGreen"
                        android:text="Confirm"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12" />


                </LinearLayout>




            </LinearLayout>

        </LinearLayout>
            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ic_check"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:tint="@color/colorGreen"
                    android:visibility="gone"
                    android:src="@drawable/ic_check_mark" />
                <ImageView
                    android:layout_toRightOf="@+id/ic_check"
                    android:id="@+id/navigateToDetails"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:src="@drawable/arrow" />
            </RelativeLayout>


    </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>